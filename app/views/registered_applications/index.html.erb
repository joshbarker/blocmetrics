<h1>Registered Applications</h1>

<div class="container main-page">
  <div class="row">
     <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

      <%= link_to "New URL", new_registered_application_path, class: 'btn btn-success' %>

      <hr>

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">My Domains</h3>
          
          <div class="pull-left">
           <!--  <button class="btn btn-warning btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button> -->
          </div>
    
        </div>
      </div>
      <div class="table-responsive">

        <table id="Task-table" class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Domain Name</th>
              <th>URL</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>

          <tbody>
            <% @registered_applications.each do |registered_application| %>
              <tr id=<%= "task-#{registered_application.id}" %>>
                <td><%= registered_application.name %></td>
                           
                <td><%= link_to registered_application.url,  registered_application %></td>

                <td><%= link_to("Edit", edit_registered_application_path(registered_application) , class: 'glyphicon glyphicon-pencil') %></td>

                <td><%= link_to("Delete", registered_application , method: :delete, remote: true, class: 'glyphicon glyphicon-trash',id: "#{registered_application.id}-complete" ) %></td>
              </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>