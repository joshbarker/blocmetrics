<h1>Edit Domain</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for Updating</p>
     <ul>
       <li>Edit the name or URL as required</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @registered_application do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter Name" %>
       </div>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_area :url, rows: 8, class: 'form-control', placeholder: "Enter URL" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>